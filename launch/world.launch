<launch>
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find inverted_pendulum_robot)/worlds/room"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <include file="$(find inverted_pendulum_robot)/launch/ip_spawn.launch">
        <arg name="robot_name" value="ip_robot1"/>
        <arg name="enable_odom_tf" value="false"/>
    </include>
</launch>